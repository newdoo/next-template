{
  "presets": [
    "next/babel"
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": [
          "./"
        ],
        "alias": {
          "@components"  : "./src/client/components",
          "@styles"      : "./src/client/styles",
          "@shapes"      : "./src/client/shapes",
          "@lib"         : "./src/client/lib",
          "@pages"       : "./src/client/pages",
          "@common"      : "./src/common",
          "@server"      : "./src/server",
          "@src"         : "./src"
        }
      }
    ]
  ]
}